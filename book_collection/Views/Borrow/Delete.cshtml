@model book_collection.Model.Borrow

@{
    ViewData["Title"] = "Ta bort lån";
}

<h1>Ta bort lån</h1>

<h3>Är du säker på att du vill avsluta lånet på boken "@Html.DisplayFor(model => model.Book.Title)"</h3>
<div>
    <h4>Borrow</h4>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BorrowedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BorrowedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Ta bort" class="btn btn-danger" /> 
        <button asp-action="Index">Ångra</button>
    </form>
</div>
